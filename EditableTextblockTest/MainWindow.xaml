<Window x:Class="EditableTextblockTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Framework.Controls;assembly=Framework.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" d:DataContext="{d:DesignData MainWindow}">
    <StackPanel>
        <controls:EditableTextControl Text="{Binding Text}"/>
        <controls:EditableTextControl Text="No binding"/>
        <Button Content="Change" Click="OnChangeClick"/>
    </StackPanel>
</Window>
